PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Path
# IMPORTANT: Use different database files for different environments to avoid data conflicts
# Development (localhost): ./database/openshelf-dev.db
# Docker: /app/data/openshelf.db
# Production: Set via docker-compose environment variables
DATABASE_PATH=./database/openshelf-dev.db

NODE_ENV=development

# TMDB API (The Movie Database)
# Get your API key at https://www.themoviedb.org/settings/api
# Required for DVD/Blu-ray metadata lookup
TMDB_API_KEY=

# Jellyfin Integration (Optional)
# Connect to your Jellyfin media server for playback links  
JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=
